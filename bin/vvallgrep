#!/bin/bash
BASE=~/lotw
if [[ ! $1 ]]; then
	echo "Nothing to do!";

elif [[ $2 ]]; then
	echo 'Partial matching mode...';
	grep --color=auto -n $1 \
		$BASE/apps/* \
		$BASE/apps/*/* \
		$BASE/apps/*/*/* \
		$BASE/sys/* \
		$BASE/mods/* \
		$BASE/mods/*/* \
		$BASE/coms/* \
		$BASE/coms/*/* \
		2>/dev/null
	
else
	echo 'Exact matching mode';
	grep --color=auto -n '\<'$1'\>' \
		$BASE/apps/* \
		$BASE/apps/*/* \
		$BASE/apps/*/*/* \
		$BASE/sys/* \
		$BASE/mods/* \
		$BASE/mods/*/* \
		$BASE/coms/* \
		$BASE/coms/*/* \
		2>/dev/null

fi;
